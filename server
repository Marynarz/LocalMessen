//Server na localu
#!/usr/bin/python

import socket
import sys

class ClientConn:
    conn = 0
    addr = 0
    data = ''
    def ClientConn(self, conn, addr):
        self.conn = conn
        self.addr = addr
    def connHndl(self):
        while True:
            data = conn.recv(64)
            if data:
                conn.send(data[::-1])
            conn.close()
            break

print 'Witaj w serwerze'
proto = socket.getprotobyname('tcp')
sock = socket.socket(socket.AF_INET,socket.SOCK_STREAM,proto)

sock.bind(('localhost',9999))
sock.listen(1)

clientC = ClientConn(sock.accept())